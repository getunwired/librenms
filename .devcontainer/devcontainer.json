{
  "name": "LibreNMS-dev",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "remoteUser": "librenms",
  "workspaceFolder": "/opt/librenms",
  "mounts": [
    "source=${localWorkspaceFolder},target=/opt/librenms,type=bind,consistency=cached"
  ],
  "postCreateCommand": "sudo ./.devcontainer/setup.sh"
}
