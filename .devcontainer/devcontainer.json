{
	"name": "Librenms-dev",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "jammy"
		}
	},
	"features": {
		"ghcr.io/devcontainers/features/common-utils:2": {
			"username": "librenms"
		}
	},
	"workspaceMount": "source=${localWorkspaceFolder},target=/opt/librenms,type=bind",
	"workspaceFolder": "/opt/librenms",
	"containerUser": "librenms",
	"remoteUser": "librenms",
	"customizations": {
		"vscode": {
			"settings": {
				"php.validate.executablePath": "/usr/bin/php8.2"
			},
			"extensions": [
				"xdebug.php-debug",
				"bmewburn.vscode-intelephense-client",
				"mrmlnc.vscode-apache",
				"ms-azuretools.vscode-docker",
				"VisualStudioExptTeam.vscodeintellicode"
			]
		}
	},
	"postCreateCommand": "sudo chmod +x .devcontainer/setup.sh && sudo ./.devcontainer/setup.sh"
}